@page
@model CodePassio_Admin.Pages.Category.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h3><i class="fa fa-angle-right"></i> Edit category</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i>Edit category</h4>
            <form class="form-horizontal style-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="InputModel.CategoryName" class="col-sm-2 col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                        <input asp-for="InputModel.CategoryName" type="text" class="form-control round-form">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="InputModel.CategoryDes" class="col-sm-2 col-sm-2 control-label">Description</label>
                    <div class="col-sm-10">
                        <input asp-for="InputModel.CategoryDes" type="text" class="form-control round-form">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Category parent</label>
                    <div class="col-sm-10">
                        <select asp-for="InputModel.Parent" asp-items="Model.Categories" class="form-control">
                            <option value="@Guid.Empty">--none--</option>
                        </select>
                    </div>
                </div>
                <input asp-for="InputModel.Id" type="hidden">
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-theme" type="submit">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>