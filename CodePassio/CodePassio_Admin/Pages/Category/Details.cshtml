@page
@model CodePassio_Admin.Pages.Category.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h3><i class="fa fa-angle-right"></i> Category detail</h3>
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <h4><a asp-page="/Category/List">All category</a><i class="fa fa-angle-right"></i>Category detail</h4>
                <hr>
                <thead>
                    <tr>
                        <th><i class="fa fa-bullhorn"></i> Name</th>
                        <th class="hidden-phone"><i class="fa fa-question-circle"></i> Descrition</th>
                        <th><i class="fa fa-windows"></i> Parent</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Category.Name</td>
                        <td>@Model.Category.Description</td>
                        <td>@Model.Category.ParentName</td>
                        <td>
                            <a asp-page="/Category/Edit" asp-route-id="@Model.Category.Id" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                            <a asp-page="/Category/Index" asp-route-id="@Model.Category.Id" asp-page-handler="Delete" onclick="return confirm('Are you sure?')" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
            <a href='javascript:history.go(-1)' class="btn btn-round btn-primary">Back</a>
        </div>
    </div>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Category.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
