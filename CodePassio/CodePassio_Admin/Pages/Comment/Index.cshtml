@page
@model CodePassio_Admin.Pages.Comment.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h3><i class="fa fa-angle-right"></i> All comment</h3>
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i>All comment</h4>
                <form method="get">
                    <div class="form-actions no-color">
                    </div>
                </form>
                <hr>
                <thead>
                    <tr>
                        <th><i class="fa fa-bullhorn"></i> Name</th>
                        <th class="hidden-phone"><i class="fa fa-question-circle"></i> Descrition</th>
                        <th><i class="fa fa-windows"></i> Post</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.Comments)
                    {
                        <tr>
                            <td>@c.ApplicationUser.Email</td>
                            <td>@c.Content</td>
                            <td>@c.Post.Title</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
