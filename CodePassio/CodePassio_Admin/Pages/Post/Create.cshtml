@page
@model CodePassio_Admin.Pages.Post.CreateModel

@{
    ViewData["Title"] = "Create";
    ViewData["SideBarActive"] = "CreatePost";
}

@section Style{
    <link href="~/css/jquery.tagsinput.min.css" rel="stylesheet">
    <link href="~/lib/jquery-ui/jquery-ui.min.css" rel="stylesheet">
}
<h3><i class="fa fa-podcast" aria-hidden="true"></i>Add new post</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <form method="post" class="form" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Post.Title" class="control-label"></label>
                    <input asp-for="Post.Title" class="form-control" />
                    <span asp-validation-for="Post.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Post.Excerpt" class="control-label"></label>
                    <textarea asp-for="Post.Excerpt" class="form-control"></textarea>
                    <span asp-validation-for="Post.Excerpt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Post.Content" class="control-label"></label>
                    <textarea asp-for="Post.Content" cols="20" class="form-control">

                    </textarea>
                    <span asp-validation-for="Post.Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Post.Tag" class="control-label"></label>
                    <input asp-for="Post.Tag" class="form-control" />
                    <span asp-validation-for="Post.Tag" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Post.CategoryId" class="control-label">Category</label>
                    <select asp-for="Post.CategoryId" class="form-control" asp-items="Model.CategoryList"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save and Publish" class="btn btn-success"/>
                    <input type="submit" value="Save draft" class="btn btn-default btn-post-save-draft"  asp-page-handler="Draft"/>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script src="~/lib/jquery.tagsinput.min.js" type="text/javascript"></script>
    <script>
        CKEDITOR.replace("Post.Content");

    </script>
    <script type="text/javascript">

        function onAddTag(tag) {
            console.info("new tag added[id:" + tag + "]");
        }
        function onRemoveTag(tag) {
            console.info("Removed a tag: " + tag);
        }

        function onChangeTag(input, tag) {
            console.info("Changed a tag: " + tag);
        }

        $(function () {
            $('#Post_Tag').tagsInput({
                width: 'auto',
                height: 'auto',
                defaultText: 'add a tag',
                onAddTag: onAddTag,
                onRemoveTag: onRemoveTag,
                onChange: onChangeTag,
                autocomplete_url: 'https://localhost:44306/api/tag'
            });
        });

        $(document).on('click', '.btn-post-save-draft', function () {
            
        })

    </script>




}
