@page
@model CodePassio_Admin.Pages.Tag.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h3><i class="fa fa-angle-right"></i> All tag</h3>
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i>All tag</h4>
                <form method="get">
                    <div class="form-actions no-color">
                    </div>
                </form>
                <hr>
                <thead>
                    <tr>
                        <th><i class="fa fa-bullhorn"></i> Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.Tag)
                    {
                        <tr>
                            <td>@t.Name</td>
                            <td>
                                <a asp-page="/Tag/Edit" asp-route-id="@t.Id" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                <a asp-page="/Tag/Index" asp-route-id="@t.Id" asp-page-handler="Delete" onclick="return confirm('Are you sure?')" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
